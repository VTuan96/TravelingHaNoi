<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtDetailNameTravel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ho guom lake"
        android:gravity="center"
        android:layout_marginTop="@dimen/size10dp"
        android:textSize="@dimen/size20sp"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/imgDetailTravel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size150dp"
        android:scaleType="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/relative_image"
        android:layout_marginLeft="@dimen/size5dp"
        android:layout_marginRight="@dimen/size5dp"
        android:textSize="@dimen/size20sp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginTop="@dimen/size15dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvRelativeImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size80dp"
        android:layout_marginLeft="@dimen/size5dp"
        android:layout_marginRight="@dimen/size5dp"></android.support.v7.widget.RecyclerView>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/introduce"
        android:layout_marginLeft="@dimen/size5dp"
        android:textSize="@dimen/size20sp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginTop="@dimen/size15dp"/>

    <TextView
        android:id="@+id/txtIntroduce"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_marginLeft="@dimen/size5dp"
        android:layout_marginRight="@dimen/size5dp"/>

</LinearLayout>