<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">
    <ImageView
        android:id="@+id/imgTravel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size200dp"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/colorBackGroundItemTravel"
        android:gravity="center">
        <TextView
            android:id="@+id/txtNameTravel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size10dp"
            android:textColor="@color/colorWhite"
            android:text="Van mieu quoc tu giam"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/size15sp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/imgDetail"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerInside"
            android:background="@drawable/ic_information"
            android:layout_marginRight="@dimen/size10dp"
            android:layout_gravity="center_vertical" />
        <ImageButton
            android:id="@+id/imgLocate"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerInside"
            android:background="@drawable/ic_location_google_map"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/size10dp"/>
    </LinearLayout>

</LinearLayout>